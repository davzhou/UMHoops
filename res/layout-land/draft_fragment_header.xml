<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy_blue"
    android:orientation="horizontal"
    android:padding="8dp"
    android:weightSum="100" >

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="14"
        android:gravity="left"
        android:text="@string/draft_header_year"
        android:textColor="@color/maize"
        android:textStyle="bold" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:gravity="left"
        android:text="@string/draft_header_rnd"
        android:textColor="@color/maize"
        android:textStyle="bold" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:gravity="left"
        android:text="@string/draft_header_pick"
        android:textColor="@color/maize"
        android:textStyle="bold" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="32"
        android:gravity="left"
        android:text="@string/draft_header_name"
        android:textColor="@color/maize"
        android:textStyle="bold" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="34"
        android:gravity="left"
        android:text="@string/draft_header_team"
        android:textColor="@color/maize"
        android:textStyle="bold" />

</LinearLayout>